.usa-map
  &.search-by-region
    .new_england,
    .mountain,
    .west_north_central,
    .east_north_central,
    .east_south_central,
    .middle_atlantic,
    .south_atlantic,
    .pacific
      &:hover
        fill: $color-main-blue
      .state
        stroke: white
  &.search-by-state
    .state
      fill: white
      stroke: $color-main-blue

      &.active
        fill: $color-main-green
      &.selected
        fill: $color-main-blue
      &.disabled
        fill: $color-main-black
        stroke: white
