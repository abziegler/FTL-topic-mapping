.main-toc-container
  width            : 100%
  height           : 365px
  background-color : $color-main-blue
  color            : #FFFFFF
  .title
    font-size      : 15px
    font-weight    : $font-bold
    letter-spacing : 1px
    margin-bottom  : 7px
  .description
    font-size      : 10px
    letter-spacing : 1.5px
    font-weight    : $font-medium
    line-height : 15px
  .col-sm-12
    margin-top : 6%
  .col-sm-4
    padding : 0px 50px
  .arrow-icon
    height : 17px
    width : 17px
    background : url(../assets/img/triangle.png) no-repeat
    position: relative
    margin : 0 auto
  .divider
    height : 100%
    border-right : 2px solid white
    width : 1px
    
.section-icon
  margin     : 0 auto
  position   : relative
  top        : -23px
  width      : 46px
  height     : 46px
  background : url(../assets/img/icon-bar-chart.png) no-repeat
