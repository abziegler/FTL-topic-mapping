.main-toc-container
  width            : 100%
  height           : 365px
  background-color : $color-main-blue
  color            : #FFFFFF
  a, a:hover
    color : white
    text-decoration: none
  .section-content
    margin-top : 8%
  .title
    font-size      : 15px
    font-weight    : $font-bold
    letter-spacing : 1px
    margin-bottom  : 7px
  .description
    font-size      : 10px
    letter-spacing : 1.5px
    font-weight    : $font-medium
    line-height    : 15px
    margin-bottom  : 10px
  .col-sm-12
    margin-top : 6%
  .col-sm-4
    padding : 0px 50px
  .arrow-icon
    background-size: 15px 12px !important
    width : 15px
    height : 12px
    background : url(../assets/img/triangle.png) no-repeat
    position: relative
    margin : 0 auto
  .divider
    height : 100%
    border-right : 2px solid white
    width : 1px

  .table th, .table td
    border : none !important
    text-align : center
  .table-responsive.col-sm-8.col-sm-offset-2
    border: 0px
