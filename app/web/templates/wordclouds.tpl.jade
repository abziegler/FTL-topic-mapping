.wordclouds-container(ng-controller="WordcloudsCtrl as wc")
  .wordclouds-title-container(style="background-color:#F6F6F1;")
    a(href="/")
      img.ftl-logo(src="./assets/img/logo-medium-blue.svg")
    h1.text-center 
      span CASELAW ACCESS PROJECT 
    h4.text-center
      | Explore the wordclouds!
      br
      span.blue-text 
        a.read-more(
          href="http://librarylab.law.harvard.edu/projects/free-the-law"
          target="_blank") read more...
  
  .container
    .col-sm-12
      .topic-header {{wc.currentState.toUpperCase()}} WORDCLOUDS
    
    .col-sm-12.col-centered
      .btn-group.col-centered(style="margin-bottom: 30px; position: relative;")
        button.btn.btn-default.dropdown-toggle(
          type="button"
          data-toggle="dropdown"
          aria-haspopup="true"
          aria-expanded="false")
          | SELECT A DIFFERENT STATE
    
        ul.dropdown-menu
          li(ng-repeat="state in wc.states") 
            a(ng-click="wc.selectState(state)") {{state}}
  
    .col-sm-12
      
      ul
        li.col-sm-4.wordcloud-item(ng-repeat="image in wc.images")
          label.col-sm-12 {{image.substr(image.length - 8)}}
          a.col-sm-12(href="{{image}}")
            img.col-sm-12.wordcloud-images(src="{{image}}")
