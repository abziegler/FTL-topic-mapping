footer.ftl-footer
  height : 365px
  width  : 100%
  background-color : $color-main-blue

  .footer-content
    color      : white
    width      : 100%
    height     : 100%
    padding    : 40px
    text-align : center

    .ftl-logo
      width : 54px
      height : 100px
      margin : 0 auto
      background : url(../assets/img/logo-small-white.svg)
      background-size: 54px 100px
      display: block;
      text-indent: -9999px;
    button.white-btn
      font           : 14px $font-name
      font-weight    : $font-bold
      color          : white
      letter-spacing : 2px
      background     : transparent
      border         : 1px solid white
      height         : 35px
      padding        : 0px 14px



    .inline-link
      border-color : white
  a:hover, a:active
    color : $color-main-green
    text-decoration : none
  h3, h4, button
    margin-top : 10px
  h3
    font-weight : $font-bold
    font-size   : 21px
    letter-spacing : 3px
