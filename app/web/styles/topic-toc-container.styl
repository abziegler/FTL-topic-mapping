.toc-container
  background-color : #fff
  padding : 3px
  width            : 100%
  height           : 259px
  .toc-hr
    text-align : center
    hr
      border : 1px solid $color-main-gray
      margin : 0px

  .toc-header
    text-align : center
    font-size  : 24px
    margin     : 14px 0 52px 0
    .title
      font-weight    : $font-bold
      letter-spacing : 2px
      padding-bottom : 10px
    .subtitle
      font-weight : $font-regular
  .toc-content
    padding-bottom : 40px
  ul
    a:hover, a:active
      text-decoration : none
    a:hover > li > .topic-title
      color : $color-main-blue
    li
      border-top : 1px solid $color-main-gray
      padding : 14px 0px
      font-weight: $font-bold
      font-size: 21px

      span.topic-title
        text-transform: capitalize
        color : $color-main-black
      span.total-count
        text-align: right
        color : $color-main-blue
