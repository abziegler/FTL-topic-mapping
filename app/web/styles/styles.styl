/* CSS DIRECTORY
	1. =VARIABLES
  2. =GENERAL
	2. =DASHBOARD
	3. =HEADER
	4. =SIDEBAR
	5. =FOOTER
*/

@import reset
/* VARIABLES */

$font-name = 'Rajdhani'

$font-light   = 300
$font-regular = 400
$font-medium  = 500
$font-bold    = 700

$text-main           = 15px $font-name
$text-section-titles = 24px $font-name
$text-subtitles      = 24px $font-name

$color-main-blue   = #0075FF
$color-main-green  = #7ED321
$color-main-black  = #2F2F2F
$color-main-gray   = #D9D9D9

$color-second-blue = #D2E7FF
$color-third-blue  = #78B6FF

.inverse-btn
  font           : 14px $font-name
  font-weight    : $font-bold
  color          : white
  letter-spacing : 2px
  background     : transparent
  border         : 1px solid white
  height         : 35px
  padding        : 0px 14px


.general-link
  border-bottom : 1px solid
  padding-bottom : 5px

/* GENERAL */

body
  font-family: 'Rajdhani', sans-serif
  font-weight     : 300
  color           : $color-main-black

@import 'header'
@import 'footer'

/* DASHBOARD */


.dashboard-title-container
  position : relative
  width    : 100%
  padding-top : 34px
  h1
    font          : $text-section-titles, sans-serif
    font-weight   : $font-bold
    font-size     : 54px
    margin-bottom : -10px
  h4
    font        : $text-subtitles, sans-serif
    font-weight : $font-regular
  .ftl-logo
    fill : $color-main-gray
    height : 74px
    margin: 0 auto

img.mountains
  width : 100%

.dashboard-toc-container
  background-color : $color-main-black
  width            : 100%
  height           : 259px
  position         : relative
  top              : -5em


@import 'nvd3-custom'
@import 'single-topic-form'
@import 'multi-topic-form'
